<% layout('layout') -%>
<div class='row'>
<h2>Sign In</h2>
</div>
<div class='row'>
Welcome to MyApps. You must sign in to use the system.
</div>
<form method="post">
<div class='row'>
    <table class="table-striped table-bordered">
        <tr>
            <td class='legend'>Username</td>
            <td class='value'><input type='text' name='username'/></td>
        </tr>
        <tr>
            <td class='legend'>Password</td>
            <td class='value'><input type='password' name='password'/></td>
        </tr>
    </table>
</div>
<div class='row actions'>
<input class="btn btn-primary" type="submit" value="Sign In" />
</div>
</form>

<div class='row'>
<h2>Create Account</h2>
</div>

<div class='row'>
You can create an account.
</div>
<form method="post" action="/register">
<div class='row'>
    <table class="table-striped table-bordered">
        <tr>
            <td class='legend'>Username</td>
            <td class='value'><input type='text' name='username'/></td>
        </tr>
        <tr>
            <td class='legend'>Password</td>
            <td class='value'><input type='password' name='password'/></td>
        </tr>
    </table>
</div>
<div class='row actions'>
<input class="btn btn-primary" type="submit" value="Create Account" />
</div>
</form>
